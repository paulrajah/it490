<h1>Listing of Cargo Deliveries</h1>

<%= form_tag shipments_path, :method => 'get', :id => "shipments_search" do %>
  <div>
    <%= text_field_tag :search, params[:search], :placeholder => 'Search by flight number', :size => 45 %>
    <%= submit_tag "Search", :name => nil, :class => 'button big gh-black' %>
  </div>
  <div id="shipments"><%= render 'shipments' %></div>
<% end %>