<h1>Listing of Pilots</h1>

<div>
  <%= link_to 'New Pilot', new_pilot_path %>
</div>

<br>

<%= form_tag pilots_path, :method => 'get', :id => "pilots_search" do %>
  <div>
    <%= text_field_tag :search, params[:search], :placeholder => 'Search by Name', :size => 45 %>
    <%= submit_tag "Search", :name => nil, :class => 'button big gh-black' %>
  </div>
  <div id="pilots"><%= render 'pilots' %></div>
<% end %>