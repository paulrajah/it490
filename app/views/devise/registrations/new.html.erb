<h3>Sign up</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, :placeholder => "Email Address", class: "form-control", :autofocus => true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :password %><br />
      <%= f.password_field :password, :placeholder => "Password", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", class: "form-control" %>
    </div>
  </div>

  <div class="row"><div class="col-md-3"><%= f.submit "Sign up", :class => "btn btn-block btn-lg btn-primary" %></div></div>
<% end %>

<div class="row"><div class="col-md-3">
<%= render "devise/shared/links" %>
</div></div>
