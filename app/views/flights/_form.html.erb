<%= form_for(@flight) do |f| %>
  <% if @flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
      <% @flight.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number, 'Tail Number' %><br>
    <%= f.select :number, Aircraft.all.collect {|a| [a.tail_number, a.id]} -%>
  </div>
  <div class="field">
    <%= f.label :origin, 'Origin' %><br>
    <%= f.select :origin, Airport.all.collect {|a| [a.name, a.id]} -%>
  </div>
  <div class="field">
    <%= f.label :destination, 'Destination' %><br>
    <%= f.select :destination, Airport.all.collect {|a| [a.name, a.id]} -%>
  </div>

  <div class="actions">
    <%= f.submit :class => 'button big gh-black'%>
  </div>
<% end %>
