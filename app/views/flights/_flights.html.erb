<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<%= will_paginate @flights %>

<table width="600">
	<thead>
		<tr>
			<th><%= sortable "number", "Flight Number" %></th>
			<th><%= sortable "origin" %></th>
			<th><%= sortable "destination" %></th>
			<th><%= sortable "departure_time" %></th>
			<th><%= sortable "arrival_time" %></th>
			<th>Cargo Contents</th>
			<th>Cargo Weight</th>
			<th>Pilot</th>
			<th>Navigator</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @flights.each do |flight| %>
		<tr>
			<td><%= flight.number %></td>
			<td><%= flight.origin.code %></td>
			<td><%= flight.destination.code %></td>
			<td><%= flight.departure_time %></td>
			<td><%= flight.arrival_time %></td>
			<td><%= flight.cargo.contents %></td>
			<td><%= flight.cargo.weight %></td>
			<td><%= "#{flight.aircrew.pilot.lname}, #{flight.aircrew.pilot.fname}" %></td>
			<td><%= "#{flight.aircrew.navigator.lname}, #{flight.aircrew.navigator.fname}" %></td>
			<td><%= link_to 'Show', flight %></td>
			<td><%= link_to 'Edit', edit_flight_path(flight) %></td>
			<td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %></tbody>
</table>

<%= will_paginate @flights %>

<br>