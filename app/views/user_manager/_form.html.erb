<%= form_for(@user, url: user_manager_index_path(@user)) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email, 'Email' %><br>
    <%= f.text_field :email, :placeholder => 'Email Address', :size => 35 %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :is_admin, 'Administrator' %>: <%= f.check_box :is_admin, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit :class => 'button big gh-black'%>
  </div>
<% end %>
